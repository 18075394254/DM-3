<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/paleturquoise"
                >
    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/regist"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />

    </LinearLayout>
    <EditText
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_user_register"

        android:hint="请输入您的用户名"
        android:layout_below="@+id/lin"
        android:layout_alignLeft="@+id/edit_pwd_2"
        android:layout_alignStart="@+id/edit_pwd_2"
        android:layout_alignRight="@+id/edit_pwd_2"
        android:layout_alignEnd="@+id/edit_pwd_2" />


    <EditText
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edit_pwd_register"
        android:hint="请输入您的密码"
        android:layout_below="@+id/edit_user_register"
        android:layout_alignRight="@+id/edit_user_register"
        android:layout_alignEnd="@+id/edit_user_register"
        android:layout_alignLeft="@+id/edit_user_register"
        android:layout_alignStart="@+id/edit_user_register" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="取消"
        android:id="@+id/but_return"
        android:textSize="20dp"
        android:onClick="click"
        android:background="#f71818"
        android:layout_below="@+id/btn_register"
        android:layout_alignLeft="@+id/btn_register"
        android:layout_alignStart="@+id/btn_register"
        android:layout_marginTop="10dp" />

    <EditText
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edit_pwd_2"
        android:layout_below="@+id/edit_pwd_register"
        android:layout_centerHorizontal="true"
        android:hint="请确认您的密码" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:onClick="click"
        android:id="@+id/btn_register"
        android:textSize="20dp"
        android:background="#1cf718"
        android:layout_below="@+id/edit_pwd_2"
        android:layout_alignLeft="@+id/edit_pwd_2"
        android:layout_alignStart="@+id/edit_pwd_2"
        android:layout_marginTop="20dp" />

</RelativeLayout>
